<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" 
         android:background="@drawable/mzj"
        android:gravity="center"
         >
         
          <SurfaceView
        android:id="@+id/surfaceViewStandOn"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:visibility="gone"
        />
       <SurfaceView
        android:id="@+id/surfaceViewSv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:visibility="gone"/>
       

	   <pl.droidsonroids.gif.GifImageView
             android:id="@+id/gifImageViewStandOn"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:visibility="gone"
         />
               
               
                 <pl.droidsonroids.gif.GifImageView
                     android:id="@+id/gifImageView1"
             		 android:layout_width="match_parent"
       				 android:layout_height="match_parent"
         			 android:visibility="gone"/>
                 
                 
                    <pl.droidsonroids.gif.GifImageView
                       android:id="@+id/gifImageView2"
            		   android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:visibility="gone"/>
                    
                    <pl.droidsonroids.gif.GifImageView
                       android:id="@+id/gifImageView3"
            		   android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:visibility="gone"/>
                    
                    <pl.droidsonroids.gif.GifImageView
                       android:id="@+id/gifImageView4"
            		   android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:visibility="gone"/>


    </RelativeLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/right_background"
        android:alpha="0.85"
        android:layout_weight="3">
   
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|top"
       >     
	       <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:gravity="center"
	         > 
	         <TextView 
	           android:id="@+id/text_deviceId"
	           android:layout_width="wrap_content"  
			   android:layout_height="wrap_content"  
			   android:textColor="#008EA3" 
			   android:layout_marginTop="5dp"		
			   android:textSize="18sp"
			   android:text=""
	            />
	         </LinearLayout>   
	         <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:gravity="center"
	          > 
	        <TextClock  
				   android:layout_width="wrap_content"  
				   android:layout_height="wrap_content"  
				   android:layout_marginTop="3dp"
				   android:textColor="#008EA3" 				  
				   android:format24Hour="yyyy/MM/dd HH:mm"   
				   android:textStyle="normal"  
				   android:textSize="22sp" />
	           
	       <!--  <TextView 
	           android:id="@+id/text_deviceNum"
	           android:layout_width="wrap_content"  
			   android:layout_height="wrap_content"  
			   android:textColor="#008EA3" 
			   android:layout_marginTop="10dp"
			   android:layout_marginEnd="20dp"
			   android:textSize="22sp"
			   android:text=""
	            />  -->
	         </LinearLayout>   
     </LinearLayout>
     
     
       <FrameLayout  
          android:id="@+id/frameLayout_qrCodeBig"
          android:orientation="vertical" 
          android:paddingLeft="30dp"
          android:paddingRight="30dp"
          android:layout_marginTop="10dp"
   		  android:gravity="center" 
          android:layout_width="fill_parent" 
          android:layout_height="252dp" >
	         
	        <TextView 
	        android:id="@+id/hynText"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
			android:gravity="center"
        	android:paddingTop="25dp"
        	android:textSize="50sp"       	
        	android:textColor="#3cf9bd"
        	android:textStyle="bold"
        	android:text="欢迎您"
            />
          <ImageView
             android:id="@+id/ivCodeBg"
	        android:layout_width="fill_parent"
	        android:layout_height="252dp"
			  android:visibility="gone"
	        android:background="@drawable/code_bg" />
          
          <ImageView      
           android:layout_marginRight="5dp"
           android:layout_marginLeft="5dp"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="10dp"
	        android:id="@+id/image_right"
	        android:layout_width="fill_parent"
	        android:layout_height="230dp"
	        android:background="@drawable/imagerqcode"
	         />
      </FrameLayout>

      
      <!-- zhong jian  start  -->
     <LinearLayout
        android:id="@+id/linearLayout_midller"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="fill_parent" 
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center">  
        
          <!-- static gif -->
       <LinearLayout
        android:id="@+id/frameLayout_staticwheel"
        android:layout_marginTop="0dp"
        android:paddingTop="0dp"
        android:layout_width="180dp"
        android:layout_height="138dp"      
        android:orientation="vertical"
        android:gravity="center" >
        
        <ImageView
        android:id="@+id/giv_bird"
        android:layout_width="180dp"
        android:layout_height="138dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/gif" />
     </LinearLayout>
          <!-- gif -->
       <LinearLayout
        android:id="@+id/frameLayout_wheel"
        android:layout_marginTop="0dp"
        android:paddingTop="0dp"
        android:layout_width="180dp"
        android:layout_height="138dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:gravity="center" >
        
        <pl.droidsonroids.gif.GifImageView
        android:id="@+id/giv_staticbird"
			android:layout_width="180dp"
			android:layout_height="138dp"
        android:orientation="vertical"
        android:gravity="center"/>
     </LinearLayout>
      
      <!-- weight code  -->
      <LinearLayout
        android:id="@+id/linearLayout_qrCodeSmall"
         android:visibility="gone"
        android:layout_marginTop="0dp"
        android:paddingTop="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="fill_parent" 
        android:layout_height="160dp"
        android:orientation="vertical"
       
        >
       <TextView 
            android:id="@+id/textView_randomCode"
             android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	 android:layout_gravity="center"
        	android:paddingTop="25dp"
        	 android:textSize="60sp"       	
        	 android:textColor="#3cf9bd"
        	 android:textStyle="bold"
        	android:text=""
            />
            
     </LinearLayout>
        
          
       
   </LinearLayout> 
   
     
          <LinearLayout
           android:id="@+id/linearLayout_network"
      android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="fill_parent" 
        android:layout_height="220dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center">  
        
  
          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/again"
            />
        
        
       </LinearLayout>
     
  <!-- zhong jian  end  -->
        
       <LinearLayout
        android:id="@+id/linearLayout_downPart"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"   
        android:layout_marginTop="10dp"
        android:background="@drawable/word_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView 
            android:id="@+id/text_scan"
             android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	 android:textSize="36sp"
			android:layout_marginBottom="5dp"  
			android:textColor="#ffffff" 
			android:textStyle="bold"   	 
        	android:text="@string/scan"
            />

		   <TextView
			   android:id="@+id/text_sao_hint"
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:text="扫一扫"
			   android:textColor="@color/title_hint_color"
			   android:textSize="52sp"
			   android:visibility="gone"
			   android:textStyle="bold" />
        <TextView 
             android:id="@+id/text_weight"
             android:layout_width="wrap_content"
        	 android:layout_height="wrap_content"
        	 android:textSize="36sp"
        	 android:textColor="#ffffff"
        	 android:textStyle="bold"
        	 android:text="@string/weight"
            />

		   <TextView
			   android:id="@+id/text_san_hint"
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:text="扫一扫"
			   android:textColor="@color/title_hint_color"
			   android:textSize="48sp"
			   android:visibility="gone"
			   android:textStyle="bold" />
       </LinearLayout>
       
       
          <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="25dp"
        android:layout_gravity="right"
        >
       
        <LinearLayout
        android:id="@+id/signLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_gravity="right"
        >
          
           <ImageView 
               android:id="@+id/mobileImage"
               android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/signal_1"/> 
          <ImageView 
               android:id="@+id/signImage"
               android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/wifi_5"/>
          
        </LinearLayout>
        
        
      <TextView 
             android:id="@+id/versionNum"
             android:layout_width="wrap_content"
        	 android:layout_height="wrap_content"
        	 android:textSize="10sp"        
        	 android:layout_marginTop="10dp"
        	 android:textColor="#ffffff"
        	 android:textStyle="bold"
        	 android:text=""
            />

         </LinearLayout>
            <LinearLayout
            android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
           > 
         </LinearLayout>
   
    
    
    </LinearLayout>
  

</LinearLayout>